<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title> community </title>
  <link rel="stylesheet" href="/css/community.css">
  <script type="text/javascript"></script>
</head>
<body>
  <div class="container">
    <h1>Community</h1>
    <div id="mainbtn">
      <button><a href="/community/new">계시물 작성</a></button>
      <button><a href="/arduino">메인으로</a></button>
      <button ><a href="/auth/logout">로그아웃</a></button><br>
    </div>
    <hr>
    <% community.forEach(community => { %>
        <div id="card">
          <div class="container">
            <div class="column">
              <div class="post-card">
                <div class="post-img">
                  <img src=<%= community.thumbnailURL %> />
                </div>
                <div class="post-content">
                  <a href="community/<%= community.id %>">
                    <div class="keyword"><%= community.keyword %></div>
                    <h1 class="title"><%= community.title %></h1>
                    <h2 class="Writer"><a href="community/userdetail/<%= community.user %>"><%= community.user %></a></h2>
                    <p class="description"><%= community.description %></p>
                    <div class="post-meta">
                      <span class="timestamp">
                        <i class="fa fa-clock-o"></i>
                        <%= community.createdAt.toLocaleString() %>
                      </span>
                      <span class="comments">
                        <i class="fa fa-comments"></i>
                        <a href="community/delete/<%= community.id %>"> 삭제</a>
                      </span>
                    </div>
                  </a>
                </div>
              </div>
              
            </div>
        </div>
    <% }) %>

  <script  src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script type="text/javascript">
    $(window).load(function() {
      $('.post-card').hover(function() {
        $(this).find('.description').stop().animate({
          height: "toggle",
          opacity: "toggle"
        }, 300);
      });
    });
  </script>

</body> 